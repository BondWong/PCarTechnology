<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="controllers" namespace="/" extends="json-default">
		
		<action name="getParkingLots" class="controller.GetParkingLotsController">
			<result type="json">
  				<param name="root">
    				necessaryData
  				</param>
			</result>
		</action>
		
		<action name="getParkingLotData" class="controller.ParkingLotDataController">
			<result type="json" name="parkingLotInfo">
				<param name="root">
					selectedParkingLot
				</param>
				<param name="excludeProperties">
					selectedParkingLot.parkingSpots
  				</param>
			</result>
			
			<result type="json" name="parkingSpotInfo">
				<param name="root">
					selectedParkingSpots
				</param>
			</result>
			
			<result type="json" name="error">
				<param name="root">
					errorMessage
				</param>
			</result>
			
		</action>
		
		<action name="getSpotsInfoFile" class="controller.GetSpotInfoFileController">
			<result type="json">
				<param name="root">
					selectedFile
				</param>
			</result>
			
			<result type="json" name="error">
				<param name="root">
					errorMessage
				</param>
			</result>
			
		</action>
		
	</package>
</struts>